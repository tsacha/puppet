auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
address <%= @ip_address %>
netmask <%= @cidr %>
gateway <%= @gateway %>

auto eth1
iface eth1 inet6 manual
  pre-up /bin/mount -o remount,rw /proc/sys && sysctl -p
  up ip -6 a a <%= @ip6_address %>/<%= @cidr6 %> dev eth1
  up ip -6 r a <%= @gateway6 %> dev eth1
  up ip -6 r a default via <%= @gateway6 %> dev eth1
