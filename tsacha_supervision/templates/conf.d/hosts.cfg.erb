define host {
  host_name                      <%= @host_name %>
  address                        <%= @host_address %>
  use                            linux-server
  hostgroups                     linux-servers,<% if(type == "physical") %>lxc-hypervisors<% else %><%= @type %>-servers,lxc-containers<% end %>
<% if(type != "physical") %>  parents <%= host_name.split('.')[1..-1].join('.') %><% end %>
}
