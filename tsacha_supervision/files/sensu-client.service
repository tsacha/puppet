[Unit]
Description=sensu client

[Service]
User=sensu
Group=sensu
ExecStart=/usr/local/bin/sensu-client -c /etc/sensu/config.json -d /etc/sensu/conf.d -e /etc/sensu/extensions -l /var/log/sensu/sensu-client.log
KillMode=process
Restart=on-failure
RestartSec=1min

[Install]
WantedBy=multi-user.target
